<p style="color: green"><%= notice %></p>

<% content_for :title, "Produtos" %>

<h1 class="mb-4">Produtos</h1>

<div class="row row-cols-1 row-cols-md-3 g-4" id="produtos">
  <% @produtos.each do |produto| %>
    <div class="col">
      <%= render produto %>
      <p>
        <%= link_to "Show this produto", produto %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New produto", new_produto_path %>
