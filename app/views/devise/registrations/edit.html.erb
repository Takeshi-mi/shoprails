<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Editar Conta</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form' }) do |f| %>
        <div class="mb-3">
          <%= f.label :email, "Email", class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :password, "Nova Senha (deixe em branco se não quiser alterar)", class: 'form-label' %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation, "Confirmar Nova Senha", class: 'form-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :current_password, "Senha Atual (necessária para confirmar alterações)", class: 'form-label' %>
          <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.submit "Atualizar", class: 'btn btn-primary w-100' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<h3>Cancelar minha conta</h3>

<div>Insatisfeito? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?", turbo_confirm: "Tem certeza?" }, method: :delete, class: 'btn btn-danger' %></div>

<%= link_to "Voltar", :back, class: 'btn btn-secondary' %>
