<h1>Pedido #<%= @order.id %></h1>

<p>
  <strong>Status:</strong> <%= @order.status_formatado %><br>
  <strong>Data:</strong> <%= @order.created_at.strftime("%d/%m/%Y %H:%M") %>
</p>

<table>
  <thead>
    <tr>
      <th>Produto</th>
      <th>Quantidade</th>
      <th>Preço Unitário</th>
      <th>Subtotal</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.produto&.name || "N/A" %></td>
        <td><%= item.quantidade || "N/A" %></td>
        <td>R$ <%= item.preco_unitario || "N/A" %></td>
        <td>R$ <%= item.produto ? item.subtotal : "N/A" %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3"><strong>Total:</strong></td>
      <td><strong>R$ <%= @order.total %></strong></td>
    </tr>
  </tfoot>
</table>

<%= link_to "Voltar para Meus Pedidos", orders_path %>