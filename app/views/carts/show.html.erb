<div class="container">
  <h1 class="mb-4">Meu Carrinho</h1>

  <% if @cart.cart_items.empty? %>
    <div class="text-center py-5">
      <p class="lead mb-4">Seu carrinho está vazio.</p>
      <%= link_to "Continuar Comprando", root_path, class: "btn btn-primary" %>
    </div>
  <% else %>
    <div class="card mb-4">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Produto</th>
                <th class="text-center">Quantidade</th>
                <th class="text-end">Preço Unitário</th>
                <th class="text-end">Subtotal</th>
                <th class="text-center">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @cart.cart_items.each do |item| %>
                <tr>
                  <td>
                    <div class="d-flex align-items-center">
                      <img src="<%= item.produto.foto %>" alt="<%= item.produto.name %>" class="me-3" style="width: 50px; height: 50px; object-fit: cover;">
                      <%= item.produto.name %>
                    </div>
                  </td>
                  <td class="text-center"><%= item.quantidade %></td>
                  <td class="text-end"><%= number_to_currency(item.produto.preco, unit: "R$", separator: ",", delimiter: ".") %></td>
                  <td class="text-end"><%= number_to_currency(item.quantidade * item.produto.preco, unit: "R$", separator: ",", delimiter: ".") %></td>
                  <td class="text-center">
                    <%= button_to remove_item_cart_path(item_id: item.id), method: :delete, class: "btn btn-danger btn-sm" do %>
                      <i class="bi bi-trash"></i> Remover
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot>
              <tr>
                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                <td class="text-end">
                  <strong><%= number_to_currency(@cart.total, unit: "R$", separator: ",", delimiter: ".") %></strong>
                </td>
                <td></td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-between align-items-center">
      <%= link_to "Continuar Comprando", root_path, class: "btn btn-outline-primary" %>
      
      <% if user_signed_in? %>
        <%= button_to orders_path, method: :post, class: "btn btn-success" do %>
          <i class="bi bi-cart-check"></i> Finalizar Compra
        <% end %>
      <% else %>
        <div class="text-end">
          <p class="mb-2">Para finalizar a compra, você precisa fazer login.</p>
          <%= link_to "Fazer Login", new_user_session_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>